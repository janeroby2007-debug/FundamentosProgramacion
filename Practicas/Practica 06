Con JOptionPane:

import javax.swing.JOptionPane;

public class AreaRectanguloDialogo {

    public static void main(String[] args) {

        double b, h, area;

        b = Double.parseDouble(JOptionPane.showInputDialog("Introduce la base:"));
        h = Double.parseDouble(JOptionPane.showInputDialog("Introduce la altura:"));

        area = b * h;

        JOptionPane.showMessageDialog(null,
                "El area del rectangulo es: " + area);
    }
}

