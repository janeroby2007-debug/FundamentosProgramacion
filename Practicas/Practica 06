Con bufferedReader:

import java.io.*;

public class InvertirNumeroBR {

    public static void main(String[] args) throws Exception {

        BufferedReader lector = new BufferedReader(new InputStreamReader(System.in));

        int numero;
        System.out.print("Escribe un numero: ");
        numero = Integer.parseInt(lector.readLine());

        int invertido = 0;

        while (numero > 0) {
            invertido = invertido * 10 + numero % 10;
            numero /= 10;
        }

        System.out.println("Numero invertido: " + invertido);
    }
}

///////////////////////////////////////////////////////////////////////////////////////

Con scanner:

import java.util.Scanner;

public class InvertirNumeroScanner {

    public static void main(String[] args) {

        Scanner entrada = new Scanner(System.in);

        System.out.print("Ingresa un numero: ");
        int valor = entrada.nextInt();
        int resultado = 0;

        while (valor > 0) {
            resultado = resultado * 10 + valor % 10;
            valor /= 10;
        }

        System.out.println("Numero al reves: " + resultado);
    }
}

