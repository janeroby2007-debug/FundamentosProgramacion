Con bufferedReader:

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.io.IOException;

public class AreaRectanguloBR {

    public static void main(String[] args) throws IOException {

        BufferedReader lector = new BufferedReader(new InputStreamReader(System.in));

        int ladoBase;
        float ladoAltura;
        double resultado;

        System.out.print("Captura la base: ");
        ladoBase = Integer.parseInt(lector.readLine());

        System.out.print("Captura la altura: ");
        ladoAltura = Float.parseFloat(lector.readLine());

        resultado = ladoBase * ladoAltura;

        System.out.println("El area calculada es: " + resultado);
    }
}

//////////////////////////////////////////////////////////////////

Con Scanner:

import java.util.Scanner;

public class AreaRectanguloScanner {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        int baseRect;
        float alturaRect;
        double areaTotal;

        System.out.print("Ingresa la base: ");
        baseRect = sc.nextInt();

        System.out.print("Ingresa la altura: ");
        alturaRect = sc.nextFloat();

        areaTotal = baseRect * alturaRect;

        System.out.println("Area del rectangulo: " + areaTotal);
    }
}

