public class VentaDosArticulos {

    public static void main(String[] args) {

        double articuloA = 25.50;
        double articuloB = 13.75;
        double porcentajeIva = 0.16;

        double suma = articuloA + articuloB;
        double impuesto = suma * porcentajeIva;
        double totalPagar = suma + impuesto;

        System.out.println("Articulo A: " + articuloA);
        System.out.println("Articulo B: " + articuloB);
        System.out.println("Subtotal: " + suma);
        System.out.println("IVA: " + impuesto);
        System.out.println("Total a pagar: " + totalPagar);
    }
}

////////////////////////////////////////////////////////////////

public class VentaCuatroArticulos {

    public static void main(String[] args) {

        double a1 = 25.5;
        double a2 = 13.75;
        double a3 = 40.25;
        double a4 = 18.90;
        double ivaAplicado = 0.16;

        double subtotalCompra = a1 + a2 + a3 + a4;
        double ivaCompra = subtotalCompra * ivaAplicado;
        double totalCompra = subtotalCompra + ivaCompra;

        System.out.println("Subtotal: " + subtotalCompra);
        System.out.println("IVA: " + ivaCompra);
        System.out.println("Total: " + totalCompra);
    }
}

