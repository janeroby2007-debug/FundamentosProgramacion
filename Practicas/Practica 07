FinAlgoritmo


Ejercicio 3

Algoritmo Practica07_03
	Definir num Como entero
	Escribir "Ingresa un numero: " Sin Saltar
	Leer num
	Si (num > 0) y (num mod 2=0) Entonces
		Escribir "El numero es positivo y par."
	FinSi
	Si	(num > 0) y (num mod 2>0) Entonces
		Escribir "El numero es positivo e impar."
	Fin Si
	Si (num < 0) y (num mod 2=0) Entonces
		Escribir "El numero es negativo y par."
	FinSi
	Si (num < 0) y (num mod 2<>0) Entonces
		Escribir "El numero es negativo e impar."
	Fin Si
FinAlgoritmo


Ejercicio 4

Algoritmo Practica07_04
	Definir num Como entero
	Escribir "Ingresa un numero: " Sin Saltar
	Leer num
	Si (num > 0) Entonces
		Escribir "El numero es positivo."
	SiNo
		Si(num < 0) Entonces
			Escribir "El numero es negativo."
		SiNo
			Escribir "Es cero."
		FinSi
	Fin Si
FinAlgoritmo


Ejercicio 5

Algoritmo Practica07_05
	Definir num Como entero
	Escribir "Ingresa un numero: " Sin Saltar
	Leer num
	Si (num > 0) y (num mod 2=0) Entonces
		Escribir "El numero es positivo y par."
	SiNo
		Si	(num > 0) y (num mod 2>0) Entonces
			Escribir "El numero es positivo e impar."
		SiNo
			Si (num < 0) y (num mod 2=0) Entonces
				Escribir "El numero es negativo y par."
			SiNo
				Si (num < 0) y (num mod 2<>0) Entonces
					Escribir "El numero es negativo e impar."
				Fin Si
			FinSi
		Fin Si
	FinSi
FinAlgoritmo

Ejercicio 6

Algoritmo Practica07_06
	Definir parcial1, parcial2, parcial3, resultado Como Real
	Escribir "Ingrese la calificacion del parcial 1: " Sin Saltar
	Leer parcial1
	Escribir "Ingrese la calificacion del parcial 2: " Sin Saltar
	Leer parcial2
	Escribir "Ingrese la calificacion del parcial 3: " Sin Saltar
	Leer parcial3
	resultado = (parcial1 + parcial2 + parcial3)/3
	
	Si (resultado >= 7) Entonces
		Escribir "Alumno acreditado."
	SiNo
		Escribir "Alumno no acreditado."
	FinSi
FinAlgoritmo


Ejercicio 7

Algoritmo Practica07_07
	Definir dia Como Entero
	Escribir "Introduzca el numero de dia: " Sin Saltar
	Leer dia
	Si (dia = 1) Entonces
		Escribir "Lunes"
	SiNo
		Si (dia = 2) Entonces
			Escribir "martes"
		SiNo
			Si (dia = 3) Entonces
				Escribir "miercoles"
			SiNo
				Si (dia = 4) Entonces
					Escribir "jueves"
				SiNo
					Si (dia = 5) Entonces
						Escribir "viernes"
					SiNo
						Si (dia = 6) Entonces
							Escribir "Sabado"
						SiNo
							Si (dia =7) Entonces
								Escribir "Domingo"
							FinSi
						FinSi
					FinSi
				FinSi
			FinSi
		FinSi
	FinSi
FinAlgoritmo


Ejercicio 8

Algoritmo Practica07_08
	Definir valdolares, candolar, canpesos Como Real
	Escribir "Escriba el valor actual del dolar: " Sin Saltar
	Leer valdolares
	Escribir "Escriba la cantidad de dolares: " Sin Saltar
	Leer candolar
	
	canpesos = (valdolares * candolar)
	
	Escribir "Cantidad de pesos: " canpesos
FinAlgoritmo



