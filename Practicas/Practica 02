Algoritmo contador_mientras

Definir contador Como Entero
contador <- 1

Mientras contador <= 5 Hacer
	Escribir contador
	contador <- contador + 1
FinMientras

FinAlgoritmo

///////////////////////////////////////////

Algoritmo contador_para

Definir num Como Entero

Para num <- 1 Hasta 5 Con Paso 1 Hacer
	Escribir num
FinPara

FinAlgoritmo

//////////////////////////////////////////

Algoritmo contador_repetir

Definir n Como Entero
n <- 1

Repetir
	Escribir n
	n <- n + 1
Hasta Que n > 5

FinAlgoritmo
